        "publisher": {
            "@type": "Organization",
            "name": "Tom Jameson Coaching",
            "url": "https://tomcoaching.com"
        },
        "datePublished": "2024-12-19",
        "dateModified": "2024-12-19",
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "https://tomcoaching.com/blog/mens-family-coaching"
        }
    }
    </script>
</Layout>
