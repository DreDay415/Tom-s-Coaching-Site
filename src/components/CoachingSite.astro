    <script>
        // Simple form handling
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const promoCode = document.getElementById('promoCode').value;
            const validCodes = ['WELCOME2024', 'FREECALL', 'COACHING50'];
            
            if (promoCode && validCodes.includes(promoCode.toUpperCase())) {
                alert('✅ Promo code applied! You qualify for a free consultation.');
            } else if (promoCode) {
                alert('❌ Invalid promo code. Please check and try again.');
                return;
            }
            
            alert('✅ Thank you! Your consultation request has been received. We\'ll contact you soon to confirm your appointment.');
            this.reset();
        });

        // 3D Cube Animation
        const cube = document.querySelector(".cube");
        const wrapper = document.querySelector(".cube-wrapper");

        if (cube && wrapper) {
            let rotationX = -20;
            let rotationY = -20;
            let autoRotateTween;
            let direction = 1; // 1 = clockwise, -1 = counter-clockwise

            gsap.set(cube, { rotateX: rotationX, rotateY: rotationY });

            function startAutoRotate() {
                autoRotateTween = gsap.to(cube, {
                    rotateY: `+=${360 * direction}`,
                    duration: 20,
                    ease: "none",
                    repeat: -1
                });
            }

            function stopAutoRotate() {
                if (autoRotateTween) autoRotateTween.kill();
                autoRotateTween = null;
            }

            // Start spinning
            startAutoRotate();

            // Draggable for manual control
            Draggable.create(wrapper, {
                type: "x,y",
                inertia: true,
                onPress: () => stopAutoRotate(),
                onDrag: function () {
                    rotationY += this.deltaX * 0.5;
                    rotationX -= this.deltaY * 0.5;
                    gsap.to(cube, {
                        rotateX: rotationX,
                        rotateY: rotationY,
                        duration: 0.3,
                        ease: "power2.out"
                    });
                },
                onRelease: () => gsap.delayedCall(2, startAutoRotate)
            });

            // Toggle spin direction on click
            wrapper.addEventListener("click", () => {
                direction *= -1;       // flip direction
                stopAutoRotate();      // kill current spin
                startAutoRotate();     // restart with new direction
            });
        }
    </script>
</body>
